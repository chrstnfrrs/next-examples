{
  "globals": {
    "ts-jest": {
      "babelConfig": true
    }
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy"
  },
  "preset": "ts-jest",
  "roots": ["./tests"],
  "testPathIgnorePatterns": ["<rootDir>/.next/", "<rootDir>/node_modules/"],
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest",
    "^.+\\.ts?$": "ts-jest",
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": true
}
